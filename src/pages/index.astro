---
import "@fontsource-variable/inter";
import Compatibility from "~/components/compatibility.astro";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import Showcase from "~/components/showcase.astro";
import "~/styles/index.css";

const site = Astro.site;
const description = "Portfolio of Dylan T. Chin";
const ogImage = `${site}social-v2.jpg`;
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content="Astro" />

    <title>Dylan T. Chin</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="Dylan T. Chin" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={site} />
    <meta property="og:image" content={ogImage} />

    
    <meta name="twitter:card" content="summary_large_image" />
    
    <!-- initialize theme -->
    <script is:inline>
      const themeSaved = localStorage.getItem("theme");

      if (themeSaved) {
        document.documentElement.dataset.theme = themeSaved;
      } else {
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        document.documentElement.dataset.theme = prefersDark ? "dark" : "light";
      }

      window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", (event) => {
        if (!localStorage.getItem("theme")) {
          document.documentElement.dataset.theme = event.matches ? "dark" : "light";
        }
      });
    </script>

    <style>
      #scroll-arrow {
        transition: opacity 0.4s ease;
      }
      #scroll-arrow.hidden {
        opacity: 0;
        pointer-events: none;
      }
    </style>
  </head>

  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />

    <!-- scroll-down arrow -->
    <a
      id="scroll"
      href="#languages"
      class="fixed bottom-20 left-1/2 -translate-x-1/2 z-[9999] animate-bounce"
    >
      <img
        src="/down.png"
        alt="Scroll down"
        class="w-16 h-16 opacity-100 invert"
      />
    </a>

    <div class="space-y-24 px-8 py-32">
      <Compatibility />
      <Showcase />
    </div>
    <Footer />

    <script is:inline>
      const arrow = document.getElementById("scroll");

      function toggleArrow() {
        if (window.scrollY > window.innerHeight * 0.05) {
          arrow.classList.add("hidden");
        } else {
          arrow.classList.remove("hidden");
        }
      }

      window.addEventListener("scroll", toggleArrow);
      toggleArrow(); // run on load
    </script>
  </body>
</html>
