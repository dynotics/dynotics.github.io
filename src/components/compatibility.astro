---
import CompatibilityList from "~/components/compatibility-list.astro";
import ContentSection from "~/components/content-section.astro";
import type { CompatibilityItem } from "~/types";

const languages: Array<CompatibilityItem> = [
  {
    title: "Python",
    icon: "logos:python",
    url: "https://www.python.org/",
  },
  {
    title: "Java",
    icon: "logos:java",
    url: "https://www.java.com/",
  },
  {
    title: "C#",
    icon: "logos:c-sharp",
    url: "https://learn.microsoft.com/en-us/dotnet/csharp/",
  },
  {
    title: "JavaScript",
    icon: "logos:javascript",
    url: "https://developer.mozilla.org/en-US/docs/Web/JavaScript",
  },
  {
    title: "TypeScript",
    icon: "logos:typescript-icon",
    url: "https://www.typescriptlang.org/",
  },
];

const tools: Array<CompatibilityItem> = [
  {
    title: "Unity",
    icon: "logos:unity",
    url: "https://unity.com/",
  },
  {
    title: "GitHub",
    icon: "fa-brands:github",
    url: "https://github.com/",
  },
  {
    title: "VS Code",
    icon: "logos:visual-studio-code",
    url: "https://code.visualstudio.com/",
  },
  {
    title: "Blender",
    icon: "logos:blender",
    url: "https://www.blender.org/",
  },
  {
    title: "Linux",
    icon: "logos:linux-tux",
    url: "https://www.linux.org/",
  },
];
---

<ContentSection title="Languages" id="languages">
  <Fragment slot="lead">
  </Fragment>
  <CompatibilityList
    items={languages}
    title="Programming Languages"
    url="#"
  />
  <CompatibilityList
    items={tools}
    title="Tools & Platforms"
    url="#"
  />
</ContentSection>
